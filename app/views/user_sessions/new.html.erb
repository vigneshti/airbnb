<div class="container">
  <div class="pos">
    <div class="alg">
         <h1>Login</h1>
    </div>
    <% form_for @user_session, :as => :user_session, :url => { :action => "create" } do |f| %>
       <%= render "shared/error_messages", :target => @user_session %>
        <div class="alg">
          <div class="row-fluid">
              <div class="span4"><%= f.label :email %></div>
              <div class="span8"><%= f.text_field :email %></div>
          </div>
        </div>
        <div class="alg">
          <div class="row-fluid">
              <div class="span4"><%= f.label :password %></div>
              <div class="span8"><%= f.password_field :password %></div>
          </div>
        </div>
      <div class="pos"><input class="btn btn-primary" id="user_session_submit" name="commit" type="submit" value="Login"></div>
    <% end %>
  </div>
</div>